<%- include('partials/header.ejs') %>

<div id="grid-container">
  <div id="grid">
    <div id="uv-container">
      <% if(!locals.data) { %>
      <h2>UV Index: <span id="index-level">No data</span></h2>
      <% } else {%>
      <h2>UV Index: <span id="index-level"><%= data.uv %></span></h2>
      <% } %>
      <p id="spf-indicator"><%= message ? message : "msg" %></p>
      <hr />
      <p id="location">📍 <%= location ? location : "loc" %></p>
      <p id="date-time">📅 July 3, 2025 <span id="time">10:30 AM</span></p>
    </div>
    <div id="sun-exposure-container">Sun exposure</div>
    <div id="sun-phase-container">Sun phase</div>
  </div>
</div>

<%- include('partials/footer.ejs') %>
